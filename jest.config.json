{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": ["/node_modules/", "/lib/", "/dist/"],
  "passWithNoTests": true,
  "transformIgnorePatterns": ["/node_modules/(?!@basketry/jest-utils)"],
  "setupFilesAfterEnv": ["@basketry/jest-utils/lib/setup"],
  "testMatch": [
    "**/__tests__/**/*.ts?(x)",
    "**/?(*.)+(spec|test|tests).ts?(x)"
  ],
  "moduleNameMapper": {
    "^@basketry/jest-utils$": "<rootDir>/utils/jest-utils/src",
    "^@basketry/typescript/lib/(.*)$": "<rootDir>/packages/typescript/src/$1",
    "^@basketry/typescript$": "<rootDir>/packages/typescript/src/index",
    "^@basketry/typescript-dtos/lib/(.*)$": "<rootDir>/packages/typescript-dtos/src/$1",
    "^@basketry/typescript-dtos$": "<rootDir>/packages/typescript-dtos/src/index"
  }
}
