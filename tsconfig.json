{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "types": ["@basketry/jest-utils/src/global.d.ts", "jest"],
    "baseUrl": ".",
    "paths": {
      "@basketry/typescript/lib/*": ["./packages/typescript/src/*"],
      "@basketry/typescript": ["./packages/typescript/src/index"],
      "@basketry/typescript-dtos/lib/*": ["./packages/typescript-dtos/src/*"],
      "@basketry/typescript-dtos": ["./packages/typescript-dtos/src/index"]
    }
  },
  "exclude": ["**/*.test?.*"]
}
